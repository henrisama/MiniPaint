                  <String fx:value="btnRetangulo" />
                  <String fx:value="btnAll" />
               </styleClass></Button>
            <Button mnemonicParsing="false" onAction="#selectedCircle" prefHeight="50.0" prefWidth="75.0" stylesheets="@style.css">
               <styleClass>
                  <String fx:value="btnCirculo" />
                  <String fx:value="btnAll" />
               </styleClass></Button>
